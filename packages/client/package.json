{
  "name": "@waline/client",
  "version": "2.15.7",
  "type": "module",
  "description": "client for waline comment system",
  "keywords": [
    "valine",
    "waline",
    "comment",
    "blog"
  ],
  "repository": {
    "url": "https://github.com/walinejs/waline",
    "directory": "packages/client"
  },
  "license": "MIT",
  "author": {
    "name": "Mr.Hope",
    "email": "mister-hope@outlook.com",
    "url": "https://mister-hope.com"
  },
  "exports": {
    ".": {
      "types": "./dist/shim.d.mts",
      "default": "./dist/shim.mjs"
    },
    "./component": {
      "types": "./dist/component.d.mts",
      "default": "./dist/component.mjs"
    },
    "./full": {
      "types": "./dist/waline.d.mts",
      "default": "./dist/waline.mjs"
    },
    "./comment": {
      "types": "./dist/comment.d.mts",
      "default": "./dist/comment.mjs"
    },
    "./pageview": {
      "types": "./dist/pageview.d.mts",
      "default": "./dist/pageview.mjs"
    },
    "./waline.css": "./dist/waline.css",
    "./waline-meta.css": "./dist/waline-meta.css",
    "./dist/*": "./dist/*",
    "./package.json": "./package.json"
  },
  "browser": "./dist/waline.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "pnpm rollup && pnpm style",
    "clean": "rimraf ./dist",
    "dev": "vite",
    "prepublishOnly": "pnpm clean && pnpm build",
    "rollup": "rollup -c rollup.config.mts --configPlugin esbuild",
    "style": "pnpm style:main && pnpm style:meta",
    "style:main": "sass ./src/styles/index.scss ./dist/waline.css --style=compressed",
    "style:meta": "sass ./src/styles/meta.scss ./dist/waline-meta.css --style=compressed"
  },
  "publishConfig": {
    "provenance": true
  },
  "browserslist": {
    "production": [
      ">0.5%",
      "maintained node versions",
      "not dead",
      "not ie 11",
      "not op_mini all",
      "last 2 years"
    ],
    "development": [
      "last 2 chrome version",
      "last 2 firefox version",
      "last 2 safari version"
    ]
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@waline/api": "workspace:*",
    "@vueuse/core": "^10.4.1",
    "autosize": "^6.0.1",
    "marked": "^8.0.0",
    "marked-highlight": "^2.0.4",
    "vue": "^3.3.4"
  },
  "devDependencies": {
    "@babel/core": "7.22.11",
    "@babel/preset-env": "7.22.14",
    "@giphy/js-types": "4.4.0",
    "@types/autosize": "4.0.1",
    "@types/marked": "5.0.1",
    "@vitejs/plugin-vue": "4.3.4",
    "recaptcha-v3": "1.10.0",
    "user-agent-data-types": "0.3.1",
    "vite": "4.4.9"
  }
}
